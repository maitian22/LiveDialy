<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/editInfo"
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="@string/edit_info"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/updateheadPic"
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="@string/upload_head_pic"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/modifyCover"
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="@string/change_cover"
                android:textColor="@color/white" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edit_id"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:background="@null"
                        android:minEms="8"
                        android:cursorVisible="false"
                        android:text="Codykwok"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_percent_20" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edit_nickname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_my_info_edittext_margin_left"
                        android:background="@null"
                        android:minEms="8"
                        android:cursorVisible="false"
                        android:text="丽莎-GAO"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_percent_20" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edit_gender"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_my_info_edittext_margin_left"
                        android:background="@null"
                        android:minEms="8"
                        android:cursorVisible="false"
                        android:text="女"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_percent_20" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地区"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edit_area"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_my_info_edittext_margin_left"
                        android:background="@null"
                        android:minEms="8"
                        android:cursorVisible="false"
                        android:text="北京" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_percent_20" />

                <LinearLayout
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edit_tel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_my_info_edittext_margin_left"
                        android:background="@null"
                        android:minEms="8"
                        android:cursorVisible="false"
                        android:text="15901234567"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_percent_20" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_my_info_edittext_margin_left"
                        android:background="@null"
                        android:minEms="8"
                        android:cursorVisible="false"
                        android:text="lisagao@hotmai.com"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_percent_20" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/briefIntro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/edit_briefIntro"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_my_info_edittext_margin_left"
                        android:background="@null"
                        android:minEms="8"
                        android:cursorVisible="false"
                        android:text="农夫山泉有点甜 农夫山泉有点甜"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_percent_20" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/activity_my_info_margin_left"
                    android:layout_marginRight="@dimen/activity_my_info_margin_right"
                    android:layout_marginTop="@dimen/activity_my_info_margin_top"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绑定"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/mPhone"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activity_my_info_edittext_margin_left"
                        android:background="@drawable/iphone_0ff_btn"
                        />
                    <ImageView
                        android:id="@+id/sina"
                        android:layout_marginLeft="10dp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/sina_off_btn"
                        />
                    <ImageView
                        android:id="@+id/qq"
                        android:layout_marginLeft="10dp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/qq_off_btn"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>