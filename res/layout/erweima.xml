<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e5e5e5" >

    <include
        android:id="@+id/head_view"
        layout="@layout/top_layout" />

    <include
        android:id="@+id/buttom_view"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        layout="@layout/buttom_layout"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/head_view"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/topView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/chuangjianren_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/wdrl_cjxc_left"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/chuangjianren_image"
                android:text="李宇春演唱会成都站李宇春演唱会成"
                android:textColor="#434343"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/no_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_text"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/chuangjianren_image"
                android:text="NO."
                android:textColor="#434343"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_text"
                android:layout_toRightOf="@id/no_text"
                android:text="123456"
                android:textColor="#2b5e89"
                android:textSize="15dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/erweima_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/topView"
            android:layout_margin="10dp"
            android:background="@drawable/wdrl_cjxc_left" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/erweima_image"
                android:text="扫描上面的二维码图案,加入行程单"
                android:layout_centerHorizontal="true"
                android:textColor="#434343"
                android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>